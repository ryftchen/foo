{
    "language": "en",
    "useGitignore": true,
    "ignorePaths":
    [
        ".github",
        "docker",
        "document"
    ],
    "dictionaries":
    [
        "bash",
        "cpp",
        "en_GB",
        "en_US",
        "filetypes",
        "python",
        "software-terms",
        "shell"
    ],
    "patterns":
    [
        {
            "name": "comment-single-line",
            "pattern": "/(\\/\\/.*)|(#.*)/g"
        },
        {
            "name": "comment-multi-line",
            "pattern": "/(?:\\/\\*[\\s\\S]*?\\*\\/)/g"
        }
    ],
    "overrides":
    [
        {
            "filename": "**/*.tpp",
            "languageId": "cpp"
        }
    ],
    "enableFiletypes":
    [
        "shellscript"
    ]
}
